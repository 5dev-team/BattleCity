{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "webworker",
      "dom"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "types": [
      "vite-plugin-pwa/client"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "src/global.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src",
    "./src/client.d.ts"
  ],
  "exclude": [
    "src/utils/gamepadEmulator.Ð¾s",
    "dev-dist",
    "ssr-dist"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
